@model IEnumerable<AirportTablo1.Models.StatisticAirline>
@{
                /**/

                /**/

                ViewBag.Title = "Statistic";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/statistic/statistic.css")
<div>
    <h2>Статистика</h2>




    @*@{Html.RenderPartial("StatisticAirline");}*@
    @*<p>@Html.ActionLink("Мій кабінет", "StatisticTerminal", "Flights")</p>
    @{Html.RenderAction("StatisticTerminal", "Flights");}*@
    @*@{Html.RenderPartial("StatisticTerminal");}*@


    @if (!Model.Any())
        {
            <p> Пока что полётов нет!</p>
    }
    else
    {
        <button type="button" class="btn btn-info print-btn">Друк статистики</button>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Назва авіакомпанії</th>
                        <th>Кількість польотів</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var flight in Model)
                    {
                        <tr>
                            <td>@flight.NameAirline</td>
                            <td>@flight.CountAirline</td>
                        </tr>
                    }
                </tbody>
            </table>
    }
</div>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
@Scripts.Render("~/scripts/bootstrap.js")
@Scripts.Render("~/scripts/statistic/statistic.js")
